{
    "metadata": [
        {
            "src": [
                {
                    "src": "..",
                    "files": [ "**.csproj" ]
                }
            ],
            "globalNamespaceId": "Global",
            "filter": "filterConfig.yml",
            "dest": "api"
        }
    ],
    "build": {
        "globalMetadata": {
            "_appTitle": "Arkane Foundation documentation",
            "_appFooter": "Arkane Foundation documentation",
            "_enableSearch": true
        },
        "content": [
            {
                "files": [ "toc.yml", "index.md" ]
            },
            {
                "src": "api",
                "files": [ "*.yml" ],
                "dest": "api"
            },
            {
                "src": "manual",
                "files": [ "toc.yml", "*.md" ],
                "dest": "manual"
            }
        ],
        "overwrite": [
            {
                "src": "..",
                "files": [ "Assets/Scripts/**/*.md" ]
            }
        ],
        "resource": [
            {
                "files": [ "resources/**/*" ]
            }
        ],
        "sitemap":
        {
            "baseUrl": "https://heathen-engineering.github.io/Arkane-Documentation",
            "changefreq": "weekly",
            "fileOptions": {
                "api/*": {
                    "changefreq": "daily"
                }
            }
        },
        "xref": [ "https://normanderwan.github.io/DocFxForUnity/Unity/xrefmap.yml" ],
        "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
        "dest": "../_site"
    }
}